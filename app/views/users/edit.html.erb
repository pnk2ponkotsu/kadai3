<p id="notice"></p>
<div class="container">
 <div class="row">
 	<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
    <%= form_with model: (@user) do |f| %>
     <% if @user.errors.any? %>
	    <h3><%= @user.errors.count %>error occurrence</h3>
	    <ul>
		   <% @user.errors.full_messages.each do |message| %>
		    <li><%= message %></li>
		   <% end %>
	    </ul>
     <% end %>
     <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br>
     <label for="inputImage">ProfileImage</label><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>  
     <label for="inputIntroductiion">Introduction</label><br>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%><br>
     <div class="form-group">
      <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
     </div>
    <% end %>
  </div>
 </div>
</div>