<p id="notice"></p>
<div class="container">

	<div class="row">
		<div class="col-md-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: @book.user %>

			<h2>New book</h2>
			<%= render 'books/newbook', book: @books %>
		</div>


		<div class="col-md-8 offset-md-1">
			<h2>Book detail</h2>
			<table class="table table-hover table-inverse">
			 <thead>
			  <tr>
				 <th>Title</th>
				 <th>Opinion</th>
				 <th colspan="3"></th>
				</tr>
			 </thead>
			 <tbody>
			  <tr>
				 <td>
				 	<%= link_to user_path(@book.user) do %>
				     <%= image_tag @book.user.get_profile_image(100,100) %><br>
					 <%= @book.user.name %>
					<% end %>
				 </td>
				 <td><%= link_to @book.title, @book %></td>
				 <td><%= @book.body %></td>

				  <% if @book.user == current_user %>
				   <td>
					  <a class="btn btn-sm btn-success edit_book_green" href="/books/<%= @book.id %>/edit">Edit</a>
				   </td>
				   <td>
				    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？",  class:"btn btn-sm btn-danger" %>
					 </td>
				  <% end %>
				</tr>
			</table>

		</div>
	</div>
</div>



